<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #0000;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.lab04.controller.SegreteriaStudentiController">
   <top>
      <Label text="Lab3_Segreteria Studenti" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" top="10.0" />
         </BorderPane.margin>
         <font>
            <Font name="Arial Black" size="18.0" />
         </font>
         <textFill>
            <RadialGradient centerX="0.5111111111111111" centerY="0.35714285714285715" radius="0.5">
               <stops>
                  <Stop color="#030322" />
                  <Stop color="#1f024a" offset="0.007662835249042145" />
                  <Stop color="#4553cd" offset="1.0" />
               </stops>
            </RadialGradient>
         </textFill></Label>
   </top>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="Corso: " />
                  <ComboBox fx:id="comboCorso" prefWidth="150.0" promptText="Corsi">
                     <HBox.margin>
                        <Insets bottom="10.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
               <VBox.margin>
                  <Insets left="15.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="btnCercaIscrittiCorso" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#doCercaIscrittiCorso" text="Cerca iscritti corso">
                     <HBox.margin>
                        <Insets left="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Studente:" />
                  <TextField fx:id="txtMatricola" promptText="Matricola...">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnTrova" mnemonicParsing="false" onAction="#doCercaNome" text="Button" />
                  <TextField fx:id="txtNome" editable="false" promptText="Nome..." />
                  <TextField fx:id="txtCognome" editable="false" promptText="Cognome..." />
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="10.0" />
               </VBox.margin>
            </HBox>
            <AnchorPane>
               <children>
                  <Button fx:id="btnCercaCorsi" layoutX="14.0" layoutY="2.0" mnemonicParsing="false" onAction="#doCercaCorsi" text="Cerca corsi" AnchorPane.rightAnchor="518.0" />
                  <Button fx:id="btnIscrivi" layoutX="525.0" layoutY="2.0" mnemonicParsing="false" onAction="#doIscrivi" text="Iscrivi" />
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="10.0" />
               </VBox.margin>
            </AnchorPane>
            <TextArea fx:id="txtResult" editable="false">
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="10.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" text="Reset">
               <HBox.margin>
                  <Insets bottom="10.0" top="15.0" />
               </HBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets left="15.0" right="15.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
